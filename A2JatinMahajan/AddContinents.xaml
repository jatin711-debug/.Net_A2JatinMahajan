<Window x:Class="A2JatinMahajan.AddContinents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2JatinMahajan"
        mc:Ignorable="d"
        Title="AddContinents" Height="450" Width="800">
    <Canvas>
        <Label Content="Add Continent" Margin="0,72,0,0" Background="White" Foreground="#FF301857" FontWeight="Bold" FontSize="35" Height="62" Width="269" Canvas.Left="132" Canvas.Top="-27"/>
        <Label Content="Continent Name" Margin="134,0,0,0" FontSize="20" FontWeight="Bold" Canvas.Left="-84" Canvas.Top="145"/>
        <TextBox x:Name="txtContinet" Margin="316,0,0,0" TextWrapping="Wrap" Width="199" Height="37" FontSize="15" Canvas.Left="-67" Canvas.Top="145"/>
        <Button x:Name="btnAdd" Content="Add" Margin="165,243,0,0" Height="35" Width="102" FontSize="20" FontWeight="Bold" Canvas.Left="-30" Canvas.Top="-12" Click="btnAdd_Click"/>
        <Button x:Name="btnClose" Content="Close" Margin="404,243,0,0" Height="35" Width="93" FontSize="20" FontWeight="Bold" Canvas.Left="-79" Canvas.Top="-13" Click="btnClose_Click"/>
        <Label x:Name="lblError" Content=""  Canvas.Left="478" Canvas.Top="150" Width="146"/>

    </Canvas>
</Window>
